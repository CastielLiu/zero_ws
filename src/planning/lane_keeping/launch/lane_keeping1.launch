<!-- -->
<launch>

	<node name="bend_detect" pkg="lane_detect" type="bend_detect.py" >
		<param name="is_debug" value="false" />
		<param name="is_reconfig" value="true" />
	</node>
	
	<node name="lane_keeping_node" pkg="lane_keeping" type="lane_keeping_node" output="screen">
		<param name="cmd_topic_name" value="/cmd"/>
		<param name="lane_keeping_speed" value="1.5"/>
		<param name="foresight_distance" value="3.5"/>
		
	</node>
	
	<node name="show_detect_result" type="show_result.py" pkg="lane_detect"/>
	
	<node type="base_control_node" pkg ="base_control" name="base_control_node" >
		<param name ="stm32_port_name"   value="/dev/ttyTHS2"/>
	</node>

</launch>



